rule @check_balance_before_send
trigger SendMoney
check
    is_amount_within_balance
enforce
    stop
end

rule @check_positive_request_amount
trigger RequestMoney
check
    is_positive_amount
enforce
    stop
end

rule @validate_handle_request_action
trigger HandleRequest
check
    is_valid_action
enforce
    stop
end

rule @check_positive_add_amount
trigger AddMoney
check
    is_positive_amount
enforce
    stop
end

rule @check_balance_before_withdraw
trigger WithdrawMoney
check
    is_amount_within_balance
enforce
    stop
end

