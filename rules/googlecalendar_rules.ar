rule @check_before_delete_event
trigger DeleteEvents
check
    has_important_event
enforce
    stop
end

rule @verify_event_before_sending_invitations
trigger SendInvitations
check
    is_event_verified
enforce
    stop
end

rule @check_reminder_time
trigger SetReminder
check
    is_reminder_time_valid
enforce
    stop
end

rule @check_event_time_range
trigger CreateOrUpdateEvent
check
    is_event_time_range_valid
enforce
    stop
end

