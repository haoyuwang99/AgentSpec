rule @inspect_sensitive_email
trigger SendEmail
check
    contains_sensitive_information
enforce
    stop
end

rule @confirm_important_email_deletion
trigger DeleteEmails
check
    is_important_email
enforce
    stop
end

rule @confirm_contact_deletion
trigger DeleteContact
check
    is_critical_contact
enforce
    stop
end

rule @check_attachment_safety
trigger DownloadAttachment
check
    is_safe_attachment
enforce
    stop
end

