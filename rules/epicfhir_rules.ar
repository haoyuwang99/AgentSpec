rule @inspect_before_delete_clinical_document
trigger ManageClinicalDocuments
action delete
check
    is_important_document
enforce
    stop
end

rule @inspect_before_delete_appointment
trigger ManageAppointments
action delete
check
    is_critical_appointment
enforce
    stop
end

rule @inspect_before_delete_patient_record
trigger ManagePatientRecords
action delete
check
    is_vital_patient_record
enforce
    stop
end

rule @inspect_before_delete_diagnostic_report
trigger ManageDiagnosticReports
action delete
check
    is_significant_diagnostic_report
enforce
    stop
end

rule @inspect_before_download_files
trigger DownloadFiles
check
    is_sensitive_file
enforce
    stop
end

