rule @validate_payment_info
trigger Booking
check
    is_invalid_payment_info
enforce
    stop
end

rule @check_refundable_amount
trigger CancelReservations
check
    has_significant_refundable_amount
enforce
    stop
end

rule @limit_flight_search_results
trigger SearchFlights
check
    exceeds_max_results
enforce
    stop
end

rule @limit_accommodation_search_results
trigger SearchAccommodations
check
    exceeds_max_results
enforce
    stop
end

rule @check_sensitive_information_access
trigger RetrieveSavedInformation
check
    is_sensitive_information_access
enforce
    stop
end

